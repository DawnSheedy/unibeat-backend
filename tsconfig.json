{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2016",
        "moduleResolution": "nodenext",
        "declaration": true,
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "outDir": "build",
        "typeRoots": ["node_modules/@types"]
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}